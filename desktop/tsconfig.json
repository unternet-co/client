{
  "compilerOptions": {
    "target": "ES2020", // Use a modern target
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist", // Output directory
    "declaration": true, // Generate declarations
    "esModuleInterop": true, // Better interop with commonJS
    "allowSyntheticDefaultImports": true, // Allows default imports from commonJS modules
    "sourceMap": true, // generates sourcemaps
    "declarationMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "vite-env.d.ts", "build/notarize.ts"],
  "exclude": ["node_modules", "dist"]
}
